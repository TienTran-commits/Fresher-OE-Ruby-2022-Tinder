<!-- Modal -->
<div class="modal fade" id=<%= "confirmModal" + user.id.to_s %> tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= user.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= t ".alert" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t ".x_btn" %></button>
        <%= button_to t(".v_btn"), upgrade_admin_page_path(user.id), method: :patch, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
