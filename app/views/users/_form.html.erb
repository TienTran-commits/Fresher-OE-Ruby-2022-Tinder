<%= form_for(@user, html: {class: "form-detail"}) do |f| %>
  <div class="form-left">
    <h2><%= t ".left_title" %></h2>
    <div class="form-row">
      <div class="gravatar_edit d-flex justify-content-center">
        <div class="col-6">
          <%= gravatar_for @user %>
          <%= link_to t(".change_img"), "https://gravatar.com/emails", target: "_blank", rel: "noopener", class: "badge rounded-pill bg-primary" %>
        </div>
      </div>
    </div>
    <div class="form-row">
      <%= f.text_field :name, placeholder: t(".name"), class: "input-text" %>
      <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :name) %></p>
    </div>
    <div class="form-row">
      <%= f.email_field :email, placeholder: t(".email"), class: "input-text" %>
      <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :email) %></p>
    </div>
    <div class="form-row">
      <%= f.password_field :password, class: "input-text", autocomplete: "new-password", placeholder: t(".pw") %>
      <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :password) %></p>
    </div>
    <div class="form-row">
      <%= f.password_field :password_confirmation, class: "input-text", autocomplete: "new-password", placeholder: t(".pw_confirm") %>
      <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :password_confirmation) %></p>
    </div>
  </div>

  <div class="form-right">
    <h2><%= t ".right_title" %></h2>
    <div class="form-group">
      <div class="form-row form-row-1">
        <%= f.label :gender, class: "badge rounded-pill bg-info text-dark" %>
        <%= f.select :gender, [[t(".m"), Settings.gender.m], [t(".fem"), Settings.gender.fem]]%>
        <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :gender) %></p>
      </div>
      <div class="form-row form-row-2">
        <%= f.label :date_of_birth, t(".dob"), class: "badge rounded-pill bg-info text-dark" %>
        <%= f.date_field :date_of_birth, min: dob(Settings.age.range[1]), max: dob(Settings.age.range[0]) %>
        <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :date_of_birth) %></p>
      </div>
    </div>
    <div class="form-row">
      <%= f.label :country_id, t(".country"), class: "badge rounded-pill bg-info text-dark" %>
      <%= f.select :country_id, cities %>
      <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :country_id) %></p>
    </div>
    <div class="form-row">
      <%= f.telephone_field t(".phone"), class: "phone", placeholder: "Phone" %>
      <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :phone) %></p>
    </div>
    <div class="form-row">
      <%= f.text_field :facebook, class: "text-input", placeholder: t(".fb") %>
      <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :facebook) %></p>
    </div>
    <div class="form-row">
      <%= f.text_area :description, placeholder: t(".des") %>
      <p class="badge rounded-pill bg-danger"><%= show_errors(f.object, :description) %></p>
    </div>

    <div class="form-row-last">
      <%= f.submit yield(:button_text), class: "register" %>
    </div>
  </div>
<% end %>
