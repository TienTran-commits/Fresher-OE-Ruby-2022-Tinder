<li class="d-flex justify-content-between mb-4" id= "their">
  <div class="rounded-circle d-flex align-self-start ms-3 shadow-1-strong" width="60">
  <%= gravatar_for message.user %>
  </div>
  <div class="card w-100">
    <div class="card-header d-flex justify-content-between p-3">
      <p class="fw-bold mb-0"><%= message.user_name %></p>
      <p class="text-muted small mb-0"><i class="far fa-clock"></i><%= message.created_at.strftime(Settings.date) %></p>
    </div>
    <div class="card-body">
      <p class="mb-0">
        <%= message.content %>
      </p>
    </div>
  </div>
</li>
