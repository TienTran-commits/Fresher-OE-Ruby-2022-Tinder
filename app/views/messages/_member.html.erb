<div id="room-id" data-room-id="<% @room_id %>"></div>
<li class="p-2 border-bottom" style="background-color: #eee;">
  <%= link_to "#{user.followed.name}", message_path(user.followed.id), class: "d-flex justify-content-between" %>
  <div class="d-flex flex-row">
    <div class="rounded-circle d-flex align-self-start ms-3 shadow-1-strong" width="60">
    <%= gravatar_for user.followed %>
    </div>
    <div class="pt-1">
      <p class="fw-bold mb-0"><%= user.followed.name %></p>
      <% message = user.followed.messages.last %>
      <% if message.present? %>
        <p class="small text-muted"><%= message.content %></p>
      <% else %>
        <p class="small text-muted"></p>
      <%end %>
    </div>
  </div>
  <div class="pt-1">
    <% if message.present? %>
      <p class="small text-muted mb-1"><%= I18n.l(message.created_at) %></p>
    <% end %>
  </div>
</li>
